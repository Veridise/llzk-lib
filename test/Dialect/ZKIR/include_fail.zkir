// RUN: zkir-opt -pass-pipeline='builtin.module(zkir-inline-includes)' -split-input-file -verify-diagnostics %s

module attributes {veridise.lang = "zkir"} {
  // expected-error@+1 {{'zkir.include' op expected 'builtin.module' from included file to have "veridise.lang" attribute}}
  zkir.include "/Users/tim/Documents/GitHub/zkir-lib/test/Dialect/ZKIR/include/header_3.zkir" as @alias1

  zkir.func @test_func() {
    zkir.call @alias1::@pkg_two::@my_func_2() : () -> ()
    return
  }
}
// -----

module attributes {veridise.lang = "zkir"} {
  module @outer {
    // expected-error@+1 {{'zkir.include' op expected 'builtin.module' from included file to be unnamed}}
    zkir.include "/Users/tim/Documents/GitHub/zkir-lib/test/Dialect/ZKIR/include/header_4.zkir" as @alias2

    zkir.func @test_func() {
      zkir.call @outer::@alias2::@pkg_two::@my_func_2() : () -> ()
      return
    }
  }
}
// -----

module attributes {veridise.lang = "zkir"} {
  module @a {
    module @b {
      module @c {
        // expected-error@+1 {{'zkir.include' op could not find file /Users/tim/Documents/GitHub/zkir-lib/test/Dialect/ZKIR/include/does_not_exist.zkir}}
        zkir.include "/Users/tim/Documents/GitHub/zkir-lib/test/Dialect/ZKIR/include/does_not_exist.zkir" as @alias3
      }
    }
  }

  zkir.func @test_func() {
    // expected-error@+2 {{'zkir.call' op references unknown symbol "@a::@b::@c::@alias3::@pkg_two::@my_func_2"}}
    // expected-error@+1 {{no 'zkir.func' named "@a::@b::@c::@alias3::@pkg_two::@my_func_2"}}
    zkir.call @a::@b::@c::@alias3::@pkg_two::@my_func_2() : () -> ()
    return
  }
}
