// RUN: llzk-opt -split-input-file %s 2>&1 | FileCheck --enable-var-scope %s

module attributes {veridise.lang = "llzk"} {
  llzk.struct @Component01<[@C]> {
    function.def @compute(%a: !llzk.felt) -> !llzk.struct<@Component01<[@C]>> {
      %self = new_struct : !llzk.struct<@Component01<[@C]>>
      %b = read_const @C : !llzk.felt
      %c = cmp gt(%a, %b)
      assert %c
      function.return %self : !llzk.struct<@Component01<[@C]>>
    }

    function.def @constrain(%self: !llzk.struct<@Component01<[@C]>>, %a: !llzk.felt) {
      %b = read_const @C : !llzk.felt
      %c = cmp gt(%a, %b)
      assert %c
      function.return
    }
  }
}
