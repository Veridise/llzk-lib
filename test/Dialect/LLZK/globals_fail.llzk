// TEST: `writeg` cannot be used in a "constrain" function
module attributes {veridise.lang = "llzk"} {
  llzk.global @t : i1 = true
  llzk.struct @Component09 {
    function.def @compute() -> !llzk.struct<@Component09> {
      %self = llzk.new_struct : !llzk.struct<@Component09>
      function.return %self : !llzk.struct<@Component09>
    }
    function.def @constrain(%self: !llzk.struct<@Component09>) {
      %c = arith.constant false
      // expected-error@+1 {{'llzk.writeg' op only valid within a 'function.def' with 'function.allow_witness' attribute}}
      llzk.writeg @t = %c : i1
      function.return
    }
  }
}
// -----

// TEST: `writeg` cannot be used in a free function
module attributes {veridise.lang = "llzk"} {
  llzk.global @g : !felt.felt
  function.def @test() {
    %c = felt.const 99999
    // expected-error@+1 {{'llzk.writeg' op only valid within a 'function.def' with 'function.allow_witness' attribute}}
    llzk.writeg @g = %c : !felt.felt
    function.return
  }
}
