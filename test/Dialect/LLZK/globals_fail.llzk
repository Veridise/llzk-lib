// TEST: GlobalReadOp with unknown symbol name
module attributes {veridise.lang = "llzk"} {
  llzk.global @g : !string.string = "Hello"
  llzk.struct @Component02 {
    function.def @compute() -> !llzk.struct<@Component02> {
      // expected-error@+1 {{'llzk.readg' op references unknown symbol "@unknown"}}
      %t = llzk.readg @unknown : !string.string
      %self = llzk.new_struct : !llzk.struct<@Component02>
      function.return %self : !llzk.struct<@Component02>
    }
    function.def @constrain(%self: !llzk.struct<@Component02>) { function.return }
  }
}
