// TEST: GlobalWriteOp targeting a "const" GlobalDefOp
module attributes {veridise.lang = "llzk"} {
  llzk.global const @t : i1 = true
  llzk.struct @Component07 {
    function.def @compute() -> !llzk.struct<@Component07> {
      %c = arith.constant false
      // expected-error@+1 {{'llzk.writeg' op cannot target 'llzk.global' marked as 'const'}}
      llzk.writeg @t = %c : i1
      %self = llzk.new_struct : !llzk.struct<@Component07>
      function.return %self : !llzk.struct<@Component07>
    }
    function.def @constrain(%self: !llzk.struct<@Component07>) { function.return }
  }
}
