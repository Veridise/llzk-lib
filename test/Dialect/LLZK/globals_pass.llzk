// RUN: llzk-opt -split-input-file %s | FileCheck %s

// TEST: uninitialized globals
module attributes {veridise.lang = "llzk"} {
  llzk.global @s : !llzk.string
  llzk.global @i : index
  llzk.global @b : i1
  llzk.global @f : !llzk.felt

  llzk.global @ax : !array.array<3 x !llzk.string>
  llzk.global @ab : !array.array<2,2 x i1>
  llzk.global @af : !array.array<6,5,3 x !llzk.felt>
  llzk.global @ai : !array.array<3,3 x index>

  llzk.global @c : !llzk.struct<@Component01B>
  llzk.global @c2s : !llzk.struct<@Component01A<[!llzk.string]>>
  llzk.global @c2i : !llzk.struct<@Component01A<[23423]>>
  llzk.global @c2a : !llzk.struct<@Component01A<[!array.array<2,2 x i1>]>>

  llzk.struct @Component01A<[@Z]> {
    function.def @compute() -> !llzk.struct<@Component01A<[@Z]>> {
      %self = new_struct : !llzk.struct<@Component01A<[@Z]>>
      function.return %self : !llzk.struct<@Component01A<[@Z]>>
    }
    function.def @constrain(%self: !llzk.struct<@Component01A<[@Z]>>) { function.return }
  }
  llzk.struct @Component01B {
    function.def @compute() -> !llzk.struct<@Component01B> {
      %self = new_struct : !llzk.struct<@Component01B>
      function.return %self : !llzk.struct<@Component01B>
    }
    function.def @constrain(%self: !llzk.struct<@Component01B>) { function.return }
  }
}
