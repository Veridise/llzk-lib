// RUN: llzk-opt -split-input-file %s | FileCheck %s

// TEST: uninitialized globals
module attributes {veridise.lang = "llzk"} {
  llzk.global @s : !llzk.string
  llzk.global @i : index
  llzk.global @b : i1
  llzk.global @f : !llzk.felt

  llzk.global @ax : !llzk.array<3 x !llzk.string>
  llzk.global @ab : !llzk.array<2,2 x i1>
  llzk.global @af : !llzk.array<6,5,3 x !llzk.felt>
  llzk.global @ai : !llzk.array<3,3 x index>

  llzk.global @c : !llzk.struct<@Component02B>
  llzk.global @c2s : !llzk.struct<@Component02A<[!llzk.string]>>
  llzk.global @c2i : !llzk.struct<@Component02A<[23423]>>
  llzk.global @c2a : !llzk.struct<@Component02A<[!llzk.array<2,2 x i1>]>>

  llzk.struct @Component02A<[@Z]> {
    func @compute() -> !llzk.struct<@Component02A<[@Z]>> {
      %self = new_struct : !llzk.struct<@Component02A<[@Z]>>
      return %self : !llzk.struct<@Component02A<[@Z]>>
    }
    func @constrain(%self: !llzk.struct<@Component02A<[@Z]>>)  { return }
  }
  llzk.struct @Component02B {
    func @compute() -> !llzk.struct<@Component02B> {
      %self = new_struct : !llzk.struct<@Component02B>
      return %self : !llzk.struct<@Component02B>
    }
    func @constrain(%self: !llzk.struct<@Component02B>)  { return }
  }
}
