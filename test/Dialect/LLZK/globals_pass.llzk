// TEST: Read and write involving a struct-type global
module attributes {veridise.lang = "llzk"} {
  llzk.global @gvar : !llzk.struct<@Component03<[4]>>

  llzk.struct @Component03<[@Z]> {
    func @compute() -> !llzk.struct<@Component03<[@Z]>> {
      %self = new_struct : !llzk.struct<@Component03<[@Z]>>
      return %self : !llzk.struct<@Component03<[@Z]>>
    }
    func @constrain(%self: !llzk.struct<@Component03<[@Z]>>)  { return }
  }

  llzk.struct @Main {
    func @compute() -> !llzk.struct<@Main> {
      %s = call @Component03::@compute() : () -> !llzk.struct<@Component03<[4]>>
      writeg @gvar = %s : !llzk.struct<@Component03<[4]>>
      %self = new_struct : !llzk.struct<@Main>
      return %self : !llzk.struct<@Main>
    }
    func @constrain(%self: !llzk.struct<@Main>)  {
      %s = readg @gvar : !llzk.struct<@Component03<[4]>>
      return  
    }
  }
}
// CHECK-LABEL:   llzk.global @gvar : !llzk.struct<@Component03<[4]>>
//
// CHECK-LABEL:   llzk.struct @Component03<[@Z]> {
// CHECK-NEXT:      func @compute() -> !llzk.struct<@Component03<[@Z]>> {
// CHECK-NEXT:        %[[V0:[0-9a-zA-Z_\.]+]] = new_struct : <@Component03<[@Z]>>
// CHECK-NEXT:        return %[[V0]] : !llzk.struct<@Component03<[@Z]>>
// CHECK-NEXT:      }
// CHECK-NEXT:      func @constrain(%[[V1:[0-9a-zA-Z_\.]+]]: !llzk.struct<@Component03<[@Z]>>) {
// CHECK-NEXT:        return
// CHECK-NEXT:      }
// CHECK-NEXT:    }
//
// CHECK-LABEL:   llzk.struct @Main {
// CHECK-NEXT:      func @compute() -> !llzk.struct<@Main> {
// CHECK-NEXT:        %[[V0:[0-9a-zA-Z_\.]+]] = call @Component03::@compute() : () -> !llzk.struct<@Component03<[4]>>
// CHECK-NEXT:        writeg @gvar = %[[V0]] : !llzk.struct<@Component03<[4]>>
// CHECK-NEXT:        %[[V1:[0-9a-zA-Z_\.]+]] = new_struct : <@Main>
// CHECK-NEXT:        return %[[V1]] : !llzk.struct<@Main>
// CHECK-NEXT:      }
// CHECK-NEXT:      func @constrain(%[[V2:[0-9a-zA-Z_\.]+]]: !llzk.struct<@Main>) {
// CHECK-NEXT:        %[[V3:[0-9a-zA-Z_\.]+]] = readg @gvar : !llzk.struct<@Component03<[4]>>
// CHECK-NEXT:        return
// CHECK-NEXT:      }
// CHECK-NEXT:    }
