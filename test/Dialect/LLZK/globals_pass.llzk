//
// CHECK-LABEL:   llzk.struct @Component06<[@Z]> {
// CHECK-NEXT:      function.def @compute() -> !llzk.struct<@Component06<[@Z]>> {
// CHECK-NEXT:        %[[V0:[0-9a-zA-Z_\.]+]] = new_struct : <@Component06<[@Z]>>
// CHECK-NEXT:        function.return %[[V0]] : !llzk.struct<@Component06<[@Z]>>
// CHECK-NEXT:      }
// CHECK-NEXT:      function.def @constrain(%[[V1:[0-9a-zA-Z_\.]+]]: !llzk.struct<@Component06<[@Z]>>) attributes {function.allow_constraints = #function.allow_constraints} {
