// CHECK-NEXT:      global.write @g = %[[V0]] : !felt.felt
// CHECK-NEXT:      %[[V1:[0-9a-zA-Z_\.]+]] = struct.new : <@Component04>
// CHECK-NEXT:      function.return %[[V1]] : !struct.type<@Component04>
