// CHECK-NEXT:    }
// CHECK-NEXT:    llzk.struct @Component01A<[@Z]> {
// CHECK-NEXT:      func @compute() -> !llzk.struct<@Component01A<[@Z]>> {
// CHECK-NEXT:        %[[V1:[0-9a-zA-Z_\.]+]] = new_struct : <@Component01A<[@Z]>>
// CHECK-NEXT:        return %[[V1]] : !llzk.struct<@Component01A<[@Z]>>
// CHECK-NEXT:      }
// CHECK-NEXT:      func @constrain(%[[V2:[0-9a-zA-Z_\.]+]]: !llzk.struct<@Component01A<[@Z]>>) {
// CHECK-NEXT:        return
// CHECK-NEXT:      }
// CHECK-NEXT:    }
// CHECK-NEXT:    llzk.struct @Component01B {
