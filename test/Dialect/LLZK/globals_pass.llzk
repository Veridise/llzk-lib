// CHECK-DAG: llzk.global @ax : !llzk.array<3 x !llzk.string>
// CHECK-DAG: llzk.global @ab : !llzk.array<2,2 x i1>
// CHECK-DAG: llzk.global @af : !llzk.array<6,5,3 x !llzk.felt>
// CHECK-DAG: llzk.global @ai : !llzk.array<3,3 x index>
