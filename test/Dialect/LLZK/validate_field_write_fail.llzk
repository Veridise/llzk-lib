// RUN: llzk-opt -split-input-file -llzk-validate-field-writes -verify-diagnostics %s

module attributes {veridise.lang = "llzk"} {
  struct.def @MultipleWrites {
    struct.field @f : !felt.felt

    function.def @compute(%1: !felt.felt) -> !struct.struct<@MultipleWrites> {
      %self = struct.new : !struct.struct<@MultipleWrites>
      // expected-note@+1 {{earlier write here}}
      struct.writef %self[@f] = %1 : !struct.struct<@MultipleWrites>, !felt.felt
      // expected-warning@+1 {{found multiple writes to 'struct.field' named "@f"}}
      struct.writef %self[@f] = %1 : !struct.struct<@MultipleWrites>, !felt.felt
      function.return %self : !struct.struct<@MultipleWrites>
    }

    function.def @constrain(%self: !struct.struct<@MultipleWrites>, %1: !felt.felt)  { function.return }
  }
}
// -----
module attributes {veridise.lang = "llzk"} {
  struct.def @MissingWrite {
    struct.field @a : index
    struct.field @b : index
    struct.field @c : index

    // expected-warning@+1 {{'function.def' op "@compute" missing write to 'struct.field' named "@b"}}
    function.def @compute(%1: index) -> !struct.struct<@MissingWrite> {
      %self = struct.new : !struct.struct<@MissingWrite>
      struct.writef %self[@a] = %1 : !struct.struct<@MissingWrite>, index
      struct.writef %self[@c] = %1 : !struct.struct<@MissingWrite>, index
      function.return %self : !struct.struct<@MissingWrite>
    }

    function.def @constrain(%self: !struct.struct<@MissingWrite>, %1: index)  { function.return }
  }
}
// -----
module attributes {veridise.lang = "llzk"} {
  struct.def @NoWrites {
    struct.field @a : !felt.felt
    struct.field @b : !felt.felt
    struct.field @c : !felt.felt

    // expected-warning@+3 {{'function.def' op "@compute" missing write to 'struct.field' named "@a"}}
    // expected-warning@+2 {{'function.def' op "@compute" missing write to 'struct.field' named "@b"}}
    // expected-warning@+1 {{'function.def' op "@compute" missing write to 'struct.field' named "@c"}}
    function.def @compute() -> !struct.struct<@NoWrites> {
      %self = struct.new : !struct.struct<@NoWrites>
      function.return %self : !struct.struct<@NoWrites>
    }

    function.def @constrain(%self: !struct.struct<@NoWrites>)  { function.return }
  }
}
