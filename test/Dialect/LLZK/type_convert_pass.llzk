//CHECK-SAME:  %[[A0:[0-9a-zA-Z_\.]+]]: !felt.felt) -> index {
//CHECK-NEXT:    %[[T0:[0-9a-zA-Z_\.]+]] = cast.toindex %[[A0]]
//CHECK-NEXT:    function.return %[[T0]] : index
//CHECK-NEXT:  }
// -----

