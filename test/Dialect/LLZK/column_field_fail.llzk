module attributes {veridise.lang = "llzk"} {
  llzk.struct @ComponentA2 {
    // expected-error@+1 {{'llzk.field' op marked as column can only contain felts, arrays of column types, or structs with columns, but field has type '!string.string'}}
    llzk.field @f1 : !string.string {column}
    function.def @compute() -> !llzk.struct<@ComponentA2> {
      %self = llzk.new_struct : !llzk.struct<@ComponentA2>
      function.return %self : !llzk.struct<@ComponentA2>
    }

    function.def @constrain(%self: !llzk.struct<@ComponentA2>) {
      function.return
    }
  }
}

