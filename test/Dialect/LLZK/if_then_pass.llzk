// CHECK-SAME:        %[[A1:[0-9a-zA-Z_.]+]]: !felt.felt) attributes {function.allow_constraint} {
// CHECK-NEXT:     function.return
// CHECK-NEXT:   }
// CHECK-NEXT: }

