module attributes {veridise.lang = "llzk"} {
  // This test case showcases that you don't need to add `scf.yield`
  // if the `scf.if` operation does not function.return a value.
  struct.def @C {
    struct.field @data : !felt.felt

    function.def @compute(%a: !felt.felt, %b: !felt.felt) -> !struct.struct<@C> {
      %self = struct.new : !struct.struct<@C>
      %z = felt.const 0
      %0 = bool.cmp ne(%a, %z)
      scf.if %0 {
        struct.writef %self[@data] = %b : !struct.struct<@C>, !felt.felt
      }
      function.return %self : !struct.struct<@C>
    }

    function.def @constrain(%self : !struct.struct<@C>, %a: !felt.felt, %b: !felt.felt) {
      function.return
    }
  }
}

