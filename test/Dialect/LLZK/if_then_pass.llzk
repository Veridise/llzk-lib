// CHECK-NEXT:     function.return %[[SELF]]
// CHECK-NEXT:   }
// CHECK-NEXT:   function.def @constrain(
// CHECK-SAME:        %[[SELF:[0-9a-zA-Z_.]+]]: !struct.struct<@C>,
